<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        android:minHeight="?attr/listPreferredItemHeight"
        android:background="?attr/selectableItemBackground">

    <TextView
            tools:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/device_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/state" android:layout_marginEnd="8dp"/>
    <TextView
            tools:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/device_address"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/device_name"
            app:layout_constraintEnd_toStartOf="@+id/state" android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_bluetooth_24dp"
            android:id="@+id/state" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>